<div class="tab_container">
  <div id="logo"><h1 class="logo"></h1>
    <div class="CTA">
      <h1>Get $10</h1>
      </div>
  </div>
  <div class="leftbox">
    <nav>
      <a id="profile" class="active"><i class="fa fa-user"><p class="text2">Profile</p></i></a>
      <a id="payment"><i class="fa fa-credit-card"><p class="text2">Payment</p></i></a>
      <a id="subscription"><i class="fas fa-palette"></i><p class="text2">Paintings</p></i></a>
      <a id="privacy"><i class="fas fa-file-alt"></i><p class="text2">Bookings</p></i></a>
      <a id="settings"><i class="fa fa-cog"><p class="text2">Settings</p></i></a>
    </nav>
  </div>
  <div class="rightbox">
    <div class="profile">
      <h1>Personal Info</h1>
      <h2>Full Name</h2>
      <p><%= "#{current_user.first_name} #{current_user.last_name}" %><button class="btn">update</button></p>
      <h2>Address</h2>
      <p><%= "#{current_user.address}" %></p>
      <h2>Email</h2>
      <p><%= "#{current_user.email} " %><button class="btn">update</button></p>
      <h2>Password </h2>
      <p>••••••• <button class="btn">Change</button></p>
    </div>

    <div class="payment noshow">
      <h1>Payment Info</h1>
      <h2>Payment Method</h2>
      <p>Mastercard •••• •••• •••• 0000 <button class="btn">update</button></p>
      <h2>Billing Address</h2>
      <p>1234 Example Ave | Seattle, WA <button class="btn">change</button></p>
      <h2>Zipcode</h2>
      <p>999000</p>
      <h2>Billing History</h2>
      <p>2018<button class="btn">view</button></p>
      <h2>Redeem Gift Subscription </h2>
      <p><input type="text" placeholder="Enter Gift Code"></input> <button class="btn">Redeem</button></p>
    </div>

    <div class="subscription noshow">
      <h1>Your Paintings</h1>
      <h2>Payment Date</h2>
      <p>05-15-2018 <button class="btn">pay now</button></p>
      <h2>Your Next Charge</h2>
      <p>$8.48<span> includes tax</span></p>
      <h2>Hulu Base Plan</h2>
      <p>Limited Commercials <button class="btn">change plan</button></p>
      <h2>Add-ons</h2>
      <p>None <button class="btn">manage</button></p>
      <h2>Monthly Recurring Total </h2>
      <p>$7.99/month</p>
    </div>

    <div class="privacy noshow">
      <h1>Bookings</h1>
      <ul>
        <ul class="list-inline bookings">
          <li style= "width: 15%;"><h2><%= "BOOKING N°" %></h2></li>
          <li style= "width: 20%;"><h2><%= "Title :" %></h2></li>
          <li style= "width: 15%;"><h2><%= "Author :" %></h2></li>
          <li style= "width: 50%;"><h2><%= "Rent Period" %></h2></li>
        </ul><hr>
      <% @bookings.each do |booking| %>
        <ul class="list-inline bookings">
          <li style= "width: 15%;"><h2><%= "00#{booking.id}" %></h2></li>
          <li style= "width: 20%;"><h2><%= booking.painting.name %></h2></li>
          <li style= "width: 15%;"><h2><%= booking.painting.author %></h2></li>
          <li style= "width: 50%;"><h2><%= "from #{booking.start_date} to #{booking.end_date}.  " %><button class="btn">manage</button></h2></li>
        </ul>
      <% end %>
      </ul>


