<div class="container text-center">
  <div class="grid">
    <div class="card-dshbrd main-section" >
      <div class="card-content">
        <%= image_tag "avatar.png", class: "img-circle", width: 150 %>
        <h2><%= "#{current_user.first_name} #{current_user.last_name}" %></h2>
        <p><%= "#{current_user.address}" %></p>
        <p><%= "#{current_user.email}" %></p>
        <p><%= "Preferred painter : " %></p>
        <button class="snip1564 fixed-top"><%= link_to 'Modify', edit_user_registration_path(current_user) %></button>
      </div>
    </div>
    <div class="card-dshbrd stats-section">
      <div class="card-content">
        <h3><%= @paintings.count %></h3>
        <p>Paintings</p>
        <button class="snip1564 hover fixed-top"><%= link_to 'Add', new_painting_path %></button>
      </div>
    </div>
    <div class="card-dshbrd stats-section">
      <div class="card-content">
        <h3><%= @bookings.count %></h3>
        <p>Bookings</p>
      </div>
    </div>
    <div class="card-dshbrd stats-section">
      <div class="card-content">
        <h3>119</h3>
        <p>Followers</p>
      </div>
    </div>
    <div class="card-dshbrd content-section">
      <div class="card-content">
        <h3><%= "More about #{current_user.first_name}" %></h3>
        <p class="text-justify">
