<div class="container">
  <h4><%= @paintings.length %> Paintings for you</h4>
  <div class="row">
    <% @paintings.each do |painting| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <figure class="snip1423">
          <%= cl_image_tag painting.photo, height: 200, width: 260, crop: :fill%>
          <figcaption>
            <h3><%= painting.name  %></h3>
            <p><%= painting.author  %></p>
            <div class="price">
              <%= painting.price %> â‚¬ / day
            </div>
          </figcaption><i class="ion-plus"></i>
          <a href=""></a>
          <%= link_to '', painting_path(painting.id) %>
        </figure>
      </div>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
